@page "/logout"
@using Frontend.Identity
@inject IAccountManagement Acct

<PageTitle>Logout</PageTitle>


<MudText Typo="Typo.h4" GutterBottom="true" Class="ma-4">Logout</MudText>

<AuthorizeView @ref="_authView">
	<Authorized>
		<MudAlert Severity="Severity.Info" Variant="Variant.Outlined" Elevation="0" Dense="true" Class="d-flex align-items-center gap-2">
			Logging you out...
		</MudAlert>
	</Authorized>

	<NotAuthorized>
		<MudAlert Severity="Severity.Success" Variant="Variant.Outlined" Elevation="0" Dense="true">
			You're logged out.
			<MudLink Href="/login" Class="ml-1">Log in.</MudLink>
		</MudAlert>
	</NotAuthorized>
</AuthorizeView>