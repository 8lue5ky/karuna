@page "/gooddeed/new"
@inject ISnackbar Snackbar

<PageTitle>Post a good deed</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small" Class="my-8">
    <MudPaper Class="pa-6 rounded-lg" Outlined="true">
        <MudStack Spacing="3">
            <MudText Typo="Typo.h5" GutterBottom="true">✨ Post a good deed</MudText>

            <MudForm @ref="_form">
                <MudTextField @bind-Value="_model.Title"
                              Label="Titel"
                              Variant="Variant.Outlined"
                              Required="true"
                              For="@(() => _model.Title)" />

                <MudTextField @bind-Value="_model.Description"
                              Label="Description"
                              Variant="Variant.Outlined"
                              Lines="5"
                              For="@(() => _model.Description)"
                              HelperText="Describe what good deeds you have done."
                              Required="true" />
                <MudStack Row="true" Spacing="2" Class="pt-4">
                    <MudButton OnClick="SubmitAsync"
                               Color="Color.Primary"
                               Variant="Variant.Filled"
                               Disabled="@_isSubmitting">
                        <MudIcon Icon="@Icons.Material.Filled.VolunteerActivism" Class="me-2" />
                        Post
                    </MudButton>

                    <MudButton OnClick="ResetForm"
                               Color="Color.Secondary"
                               Variant="Variant.Outlined">
                        Reset
                    </MudButton>
                </MudStack>
            </MudForm>
        </MudStack>
    </MudPaper>
</MudContainer>